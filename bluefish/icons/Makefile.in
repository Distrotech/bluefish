top_srcdir = @top_srcdir@
top_builddir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
pkgdatadir = @pkgdatadir@

infodir = $(prefix)/info
libdir = $(prefix)/lib/gnudl
mandir = $(prefix)/man/man1
localedir = @localedir@
gnulocaledir = $(prefix)/share/locale
aliaspath = $(localedir):.

OBJS = 	icon_c.png \
			icon_html.png \
			icon_java.png \
			icon_unknown.png \
			icon_dir.png \
			icon_image.png \
			icon_php.png \
			icon_xml.png

INSTALL = @INSTALL@
INSTALL_DIR = $(INSTALL) -d -m 755 
INSTALL_DATA = $(INSTALL) -m 644

all: bluefish
bluefish:

install: all
	$(INSTALL_DIR) $(pkgdatadir)
	for file in $(OBJS) ; \
		do $(INSTALL_DATA) $$file $(pkgdatadir) ; \
	done

uninstall:
	/bin/rm -f $(pkgdatadir)/icon_*.png




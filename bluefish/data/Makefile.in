PACKAGE = @PACKAGE@
VERSION = @VERSION@

SHELL = /bin/sh

top_srcdir = @top_srcdir@
top_builddir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
pkgdatadir = @pkgdatadir@
datadir = @datadir@
localedir = $(datadir)/locale

GNOME1MENU=@GNOME1MENU@
GNOME2MENU=@GNOME2MENU@
GNOME2MIMEINFO=@GNOME2MIMEINFO@
GNOME2APPLICATIONREGISTRY=@GNOME2APPLICATIONREGISTRY@
GNOME2MIME=@GNOME2MIME@
UPDATE_MIME_PATH=@UPDATE_MIME_PATH@
UPDATE_DESKTOP_PATH=@UPDATE_DESKTOP_PATH@
ICONPATH=@ICONPATH@
INSTALLDATA=@INSTALLDATA@
HAVE_GNOME_VFS=@HAVE_GNOME_VFS@

INSTALL = @INSTALL@
INSTALL_DIR = $(INSTALL) -d -m 755 
INSTALL_DATA = ${INSTALL} -m 644

DEFAULTFILES = highlighting.default filetypes.default encodings.default custom_menu.default custom_menu.fr.default custom_menu.de.default
FUNCREFFILES = funcref_html.xml funcref_php.xml funcref_css.xml funcref_python.xml
.SUFFIXES: .in .default

.in.default:
	sed -e 's!PKGDATADIR!$(pkgdatadir)!' < $< > $@

all: $(DEFAULTFILES)
	sed -e 's!ICONDIR!$(iconpath)!' < bluefish.desktop.in > bluefish.desktop
	if test "x${HAVE_GNOME_VFS}" = "xyes" ; then \
		sed -e 's!EXPECT_URIS!true!' -e 's!SUPPORTED_URI_SCHEMES!file,http,ftp,sftp,smb!' < bluefish.applications.in > bluefish.applications ;\
	else \
		sed -e 's!EXPECT_URIS!false!' -e 's!SUPPORTED_URI_SCHEMES!!' < bluefish.applications.in > bluefish.applications ;\
	fi

install-gnome1-menu:
	$(INSTALL_DATA) bluefish.desktop $(DESTDIR)$(GNOME1MENU)

install-gnome2-menu:
	$(INSTALL_DATA) bluefish.desktop $(DESTDIR)$(GNOME2MENU)

install-icon:
	$(INSTALL_DATA) gnome-application-bluefish.png $(DESTDIR)$(ICONPATH)/gnome-application-bluefish-project.png

install-gnome2.8: install-gnome2-menu install-icon
	$(INSTALL_DATA) bluefish.xml $(DESTDIR)$(GNOME2MIME)/packages/
	$(UPDATE_MIME_PATH) $(GNOME2MIME)
	$(UPDATE_DESKTOP_PATH)

install-gnome2.6: install-gnome2-menu install-icon
	$(INSTALL_DATA) bluefish.mime $(DESTDIR)$(GNOME2MIMEINFO)
	$(INSTALL_DATA) bluefish.keys $(DESTDIR)$(GNOME2MIMEINFO)
	$(INSTALL_DATA) bluefish.applications $(DESTDIR)$(GNOME2APPLICATIONREGISTRY)

install: all $(INSTALLDATA)
	$(INSTALL_DIR) $(DESTDIR)$(pkgdatadir)
	for file in $(DEFAULTFILES) ; do \
		$(INSTALL_DATA) $$file $(DESTDIR)$(pkgdatadir)/$$file ;\
	done
	for file in $(FUNCREFFILES) ; do \
		$(INSTALL_DATA) $$file $(DESTDIR)$(pkgdatadir)/$$file ;\
	done

uninstall:
	rm -rf $(DESTDIR)$(GNOME2MIME)/packages/bluefish.xml
	rm -rf $(GNOME2MIMEINFO)/bluefish.mime
	rm -rf $(GNOME2MIMEINFO)/bluefish.keys
	rm -rf $(GNOME2APPLICATIONREGISTRY)/bluefish.applications
	rm -rf $(GNOME1MENU)/bluefish.desktop
	rm -rf $(GNOME2MENU)/bluefish.desktop
	rm -rf $(ICONPATH)/gnome-application-bluefish-project.png
	@for file in $(DEFAULTFILES) ; do \
		rm -f $(pkgdatadir)/$$file ;\
	done
	for file in $(FUNCREFFILES) ; do \
		rm -rf $(pkgdatadir)/$$file ;\
	done

clean:
	rm -f *.default
	rm -f bluefish.desktop
	rm -f bluefish.applications

distclean: clean
	rm -f Makefile *.rej *.orig *~

PACKAGE = @PACKAGE@
VERSION = @VERSION@

top_srcdir = @top_srcdir@
top_builddir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
pkgdatadir = @pkgdatadir@
pkglibdir = @pkglibdir@

infodir = $(prefix)/info
mandir = $(prefix)/man/man1
localedir = @localedir@
gnulocaledir = $(prefix)/share/locale
aliaspath = $(localedir):.

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
INSTALL_DIR = $(INSTALL) -d -m 755 
INSTALL_PROGRAM = $(INSTALL) -s -m 755
DEFS = -DLOCALEDIR=\"$(localedir)\" -DGNULOCALEDIR=\"$(gnulocaledir)\" \
-DLOCALE_ALIAS_PATH=\"$(aliaspath)\" -DPKGDATADIR=\"$(pkgdatadir)\"  -DPKGLIBDIR=\"$(pkglibdir)\" @DEFS@

OLDSRC = about.c \
			cap.c \
			html.c \
			html2.c \
			html_diag.c \
			html_form.c \
			html_table.c \
			image.c \
			quickstart.c \
			rpopup.c \
			wizards.c
			
SRCS = 	\
			authen2.c \
			bf_lib.c \
			bfspell.c \
			bf-textview.c \
			bluefish.c \
			bookmark.c \
			char_table.c \
			dialog_utils.c \
			document.c \
			embed_python.c \
			external_commands.c \
			file.c \
			filetype.c \
			file_dialogs.c \
			filebrowser2.c \
			fref2.c \
			gtk_easy.c \
			gui.c \
			highlight.c \
			menu.c \
			msg_queue.c \
			outputbox.c \
			pixmap.c \
			plugins.c \
			preferences.c \
			project.c \
			rcfile.c \
			snr2.c \
			stringlist.c \
			textstyle.c \
			treetips.c \
			undo_redo.c

OBJS = $(SRCS:.c=.o)

all: bluefish
	@cd plugin_htmlbar/ && $(MAKE) all
	@cd plugin_about/ && $(MAKE) all

bluefish: $(SRCS) $(OBJS)
	$(CC) $(DEFS) -o bluefish $(OBJS) $(LDFLAGS) $(LIBS)
	echo "The bluefish binary is succesfully created"

.c.o: $(SRCS)
	$(CC) $(DEFS) $(CFLAGS) -c -o $@ $<

$(OBJS): bluefish.h

clean:
	rm -f $(OBJS) bluefish
	@cd plugin_htmlbar/ && $(MAKE) clean
	@cd plugin_about/ && $(MAKE) clean

patchclean: clean
	rm -f *.orig *.rej
	@cd plugin_htmlbar/ && $(MAKE) patchclean
	@cd plugin_about/ && $(MAKE) patchclean

distclean: patchclean
	rm -f config.h Makefile *~ *.bak core
	rm -f *.bb *.bbg *.c.gcov *.da
	@cd plugin_htmlbar/ && $(MAKE) distclean
	@cd plugin_about/ && $(MAKE) distclean

install: all
	$(INSTALL_DIR) $(DESTDIR)$(bindir)
	$(INSTALL_PROGRAM) ./bluefish $(DESTDIR)$(bindir)/$(PACKAGE)
	@cd plugin_htmlbar/ && $(MAKE) install
	@cd plugin_about/ && $(MAKE) install

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(PACKAGE)
	@cd plugin_htmlbar/ && $(MAKE) uninstall
	@cd plugin_about/ && $(MAKE) uninstall

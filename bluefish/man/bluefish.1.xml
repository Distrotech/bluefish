	<refmeta>
		<refentrytitle>&dhpackage;</refentrytitle>
		<manvolnum>&dhsection;</manvolnum>
	</refmeta>
	<refnamediv>
		<refname>&dhpackage;</refname>
		<refpurpose>editor for experienced web designers and programmers</refpurpose>
	</refnamediv>
	<refsynopsisdiv>
		<cmdsynopsis>
			<command>&dhpackage;</command>
			<group choice="opt">
				<arg choice="plain"><option>-s</option></arg>
				<arg choice="plain"><option>--skiprootcheck</option></arg>
			</group>
			<group choice="opt">
				<arg choice="plain"><option>-n</option></arg>
				<arg choice="plain"><option>--newwindow</option></arg>
			</group>
			<group choice="opt">
				<arg choice="plain"><option>-p</option> <replaceable>PROJECTFILE</replaceable></arg>
				<arg choice="plain"><option>--project=<replaceable>PROJECTFILE</replaceable></option></arg>
			</group>
			<arg choice="opt" rep="repeat"><replaceable class="parameter">FILE(S)</replaceable></arg>
		</cmdsynopsis>
		<cmdsynopsis>
			<command>&dhpackage;</command>
			<group choice="req">
				<arg choice="plain">
					<group choice="opt">
						<arg choice="plain"><option>-?</option></arg>
						<arg choice="plain"><option>--help</option></arg>
					</group>
				</arg>
				<arg choice="plain"><option>--help-all</option></arg>
				<arg choice="plain"><option>--help-*</option></arg>
				<arg choice="plain">
					<group choice="opt">
						<arg choice="plain"><option>-v</option></arg>
						<arg choice="plain"><option>--Version</option></arg>
					</group>
				</arg>
			</group>
		</cmdsynopsis>
	</refsynopsisdiv>
	<refsect1 id="description">
		<title>DESCRIPTION</title>
		<para>
			<command>&dhpackage;</command> is an open-source editor for experienced
			web designers and programmers, supporting many programming and markup
			languages, but focusing on creating dynamic and interactive websites.
		</para>
	</refsect1>
	<refsect1 id="options">
		<title>OPTIONS</title>
		<para>
			<command>&dhpackage;</command> currently supports the following options:
		</para>
		<variablelist>
			<varlistentry>
				<term><option>-n</option></term>
				<term><option>--newwindow</option></term>
				<listitem>
					<para>Open in a new window.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>-p <replaceable>PROJECTFILE</replaceable></option></term>
				<term><option>--project=<replaceable>PROJECTFILE</replaceable></option></term>
				<listitem>
					<para>Open a project.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>-s</option></term>
				<term><option>--skiprootcheck</option></term>
				<listitem>
					<para>Skip root check.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>-?</option></term>
				<term><option>--help</option></term>
				<listitem>
					<para>Print application help screen.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>--help-all</option></term>
				<listitem>
					<para>Print all help options. These options are not documented here.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>--help-*</option></term>
				<listitem>
					<para>Print grouped help options, depending on what is <quote>*</quote>. These options are not documented here.</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term><option>-v</option></term>
				<term><option>--Version</option></term>
				<listitem>
					<para>Print version information.</para>
				</listitem>
			</varlistentry>
		</variablelist>
	</refsect1>
</refentry>


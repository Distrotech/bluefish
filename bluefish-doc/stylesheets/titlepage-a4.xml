<!-- ==================================================================== -->

  <t:titlepage t:element="book" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="28pt"
	     space-before="1in"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
      <subtitle
		text-align="center"
		font-size="10pt"
		font-weight="normal"
		font-style="italic"
		space-before="0in"
		space-after="1mm"
		font-family="{$title.fontset}"/>
	   <mediaobject/>
      <authorgroup 
      space-before="1.9in"
      space-after="2in"/>
      <author font-size="&hsize3;"
	      space-before="2.7in"
	      space-after="2in"
	      keep-with-next="always"/>
     <copyright font-size="11pt"
	      space-before="2.3in"
	      space-after="0in"
	      font-weight="normal"
	      keep-with-next="always"/>
    </t:titlepage-content>

  <t:titlepage-content t:side="verso">
      <title
	     t:named-template="book.verso.title"
	     font-size="10pt"
	     font-weight="bold"
	     font-family="{$title.fontset}"
	     text-align="center"
	     space-after="1em"/>
      <corpauthor/>
      <authorgroup t:named-template="verso.authorgroup"
      text-align="center"/>
      <author/>
      <othercredit text-align="center"/>
      <revision font-size="11pt"
	      space-before="0in"
	      space-after="0in"
	      keep-with-next="always"/>
       <revhistory font-size="11pt"
 	      space-before="1in"
	      space-after="1in"
	      keep-with-next="always"/>
      <copyright 
      space-before="5.7in"
      space-after="0in"
      text-align="center"/>
      <abstract/>
      <legalnotice/>
      <pagenums
      space-before="0in"
      text-align="center"/>
      <pubdate
      space-before="0in"
      text-align="center"/>
  </t:titlepage-content>

  <t:titlepage-separator>
      <fo:block break-after="page"/>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
      <fo:block break-after="page"/>
  </t:titlepage-before>
</t:titlepage>


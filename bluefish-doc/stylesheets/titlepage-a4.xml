<!-- ==================================================================== -->

  <t:titlepage t:element="book" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
     <authorgroup 
      font-size="12pt"      
      text-align="right"
      line-height="2"      
      space-before="0.5in"
      space-after="2.2in"/>
      <author 
	      keep-with-next.within-column="always"/>
      <mediaobject/>
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="30pt"
	     space-before="1.5in"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
      <subtitle
		text-align="center"
		font-size="10pt"
		font-weight="normal"
		font-style="italic"
		space-before="0in"
		space-after="1mm"
		font-family="{$title.fontset}"/>
    </t:titlepage-content>

  <t:titlepage-content t:side="verso">
      <title
	     t:named-template="book.verso.title"
	    text-align="center"
	    font-size="10pt"
	    font-weight="bold"
	    space-after="1em"
	    font-family="{$title.fontset}"/>
      <corpauthor/>
      <authorgroup t:named-template="verso.authorgroup"
      text-align="center"/>
      <author/>
      <othercredit text-align="center"/>
      <abstract 
      	space-before="1.4in"
	    space-after="1.4in"
	    keep-with-next.within-column="always"/>
      <revhistory
      	font-size="11pt"/>
   	  <copyright 
      space-before="3.9in"
      space-after="0in"
      text-align="center"/>
      <pagenums
      space-before="0in"
      text-align="center"/>
      <pubdate
      space-before="0in"
      text-align="center"/>
  </t:titlepage-content>

  <t:titlepage-separator>
      <fo:block break-after="page"/>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
      <fo:block break-after="page"/>
  </t:titlepage-before>
</t:titlepage>

<!-- ==================================================================== -->

  <t:titlepage t:element="preface" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
      <title

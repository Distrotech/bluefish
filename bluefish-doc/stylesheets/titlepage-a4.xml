	     param:node="ancestor-or-self::preface[1]"
	     margin-left="{$title.margin.left}"
	     font-size="&hsize5;"
	     font-family="{$title.fontset}"
	     font-weight="bold"
	     text-align="center"
	     start-indent="0pt"
	     space-before.minimum="0em"
	     space-before.optimum="0em"
	     space-before.maximum="0em"
	     space-after="0em"/>
      <subtitle
		font-family="{$title.fontset}"/>
    </t:titlepage-content>

  <t:titlepage-content t:side="verso">
  </t:titlepage-content>


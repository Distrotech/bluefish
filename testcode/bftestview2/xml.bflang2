<bflang pattern="XML">
<header><mime type="text/xml"/><mime type="application/xml"/></header>
<definition>
<context symbols="&gt;&lt;&amp;; &#9;&#10;&#13;">
	<element pattern="&lt;[a-zA-Z0-9:]+" is_regex="1" highlight="function">
		<context symbols="&gt;&amp;;&#34;' &#9;&#10;&#13;">
			<element pattern="&#34;[^&#34;]+&#34;" highlight="string" is_regex="1" />
			<element pattern="'[^']+'" highlight="string" is_regex="1" />
			<element pattern="&gt;" highlight="function" ends_context="1" />
		</context>
	</element>
	<element pattern="&lt;!--" highlight="comment" starts_block="1">
		<context symbols="-&gt; &#9;&#10;&#13;" highlight="comment">
			<element pattern="--&gt;" ends_block="1" blockstartelement="&lt;!--" highlight="comment" mayfold="1" ends_context="1" />
		</context>
	</element>
	<element pattern="&amp;[a-z0-9#]+;" is_regex="1" highlight="value" />
</context>
</definition>
</bflang>
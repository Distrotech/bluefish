top_srcdir = @top_srcdir@
top_builddir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
pkgdatadir = @pkgdatadir@

infodir = $(prefix)/info
mandir = $(prefix)/man/man1
localedir = @localedir@
gnulocaledir = $(prefix)/share/locale
aliaspath = $(localedir):.

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
INSTALL_DIR = $(INSTALL) -d -m 755 
INSTALL_PLUGIN = $(INSTALL) -s -m 644

DEFS = -DLOCALEDIR=\"$(localedir)\" -DGNULOCALEDIR=\"$(gnulocaledir)\" \
-DLOCALE_ALIAS_PATH=\"$(aliaspath)\" -DPKGDATADIR=\"$(pkgdatadir)\" @DEFS@

PLUGIN=htmlbar.so
PLUGINDIR=${pkgdatadir}

OBJECTS= cap.o \
	htmlbar.o \
	html.o \
	html2.o \
	html_diag.o \
	html_table.o \
	html_form.o \
	image.o \
	htmlbar_gui.o \
	rpopup.o \
	wizards.o

all : $(PLUGIN)

install : $(PLUGIN)
	@cd po/ && make install
	$(INSTALL_DIR) $(PLUGINDIR)
	$(INSTALL_PROGRAM) $(PLUGIN) $(PLUGINDIR)


$(PLUGIN) : $(OBJECTS)
	@cd po/ && make
	$(CC) $(LIBS) -shared $^ -o $@

.c.o: $(SRCS)
	$(CC) $(DEFS) $(CFLAGS) -c $^ -o $@

clean :
	rm -f $(PLUGIN) *.o

patchclean:
	rm -f *.orig *.rej

distclean: clean patchclean
	rm -f Makefile


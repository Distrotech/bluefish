SHELL = /bin/sh
VPATH = @srcdir@

PACKAGE = @PACKAGE@
VERSION = @VERSION@

srcdir = src

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datadir = @datadir@
pkgdatadir = $(datadir)/@PACKAGE@
pixmapsdir = @prefix@/share/pixmaps

INSTALL = @INSTALL@

#make -C is a GNU extension, BSD make doesn't have it
#use cd dir ; make all instead

bluefish:all
all:
	@cd src/ && $(MAKE) all

clean:
	rm -f core *~
	@cd src/ && $(MAKE) clean

patchclean: clean
	rm -f *.orig *.rej
	@cd src/ && $(MAKE) patchclean  

distclean:
	@cd src/ && $(MAKE) distclean
	rm -f Makefile src/Makefile icons/Makefile config.status config.cache config.log
	rm -rf autom4te.cache/
	rm -f *.orig *.rej

install:
	@cd icons/ && $(MAKE) install
	@cd src/ && $(MAKE) install

uninstall:
	@cd icons/ && $(MAKE) uninstall
	@cd src/ && $(MAKE) uninstall
	/bin/rmdir $(pkgdatadir)
